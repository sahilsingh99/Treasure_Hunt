<%- include("../partials/header") %>

<div class="container" style="padding-top: 2%;">
    <div class="row">
        <div class="card col-md-3">
            <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Horizontal/Nature/full page/img(20).jpg" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= currentUser.username %></h5>
              <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
              <p class="btn btn-dark">Score: <%= currentUser.score %></p>
              <p href="#" class="btn btn-dark">Level: <%= currentUser.level %></p>
            </div>
          </div>
<!-- Problem Statement -->
          <div class="card col-md-9">
            <h5 class="card-header" style="color: white; background-color: #343a40;">Question Statement</h5>
            <div class="card-body">
              <h5 class="card-title"><%= data.question.title %></h5>
              <p class="card-text"><%= data.question.statement %></p>
              <p class="btn btn-dark" id = 'hint' onclick="fun()">Hint</p>
            </div>
            <form action="/Game/update" method="post">
              <div class="form-group">
                <input type="text" name="response" id="" class="form-control" placeholder="Ans Here">
              </div>
              <div class="form-group">
                <button class="btn btn-lg btn-dark btn-block">Submit</button>
              </div>
            </form>
          </div>
<!-- Problem Statement -->
    </div>
    <div class="row hidden" id = 'todo'>
      <div class="card col-md-12">
        <h5 class="card-header" style="color: white; background-color: #343a40;">Smart Guys doesn't need Hints.</h5>
        <div class="card-body">
          <p class="card-text"><%= data.question.hint %></p>
          <p class="btn btn-dark" id = 'close' onclick="fun()">Close</p>
        </div>
      </div>
    </div>
</div>
<script type="text/javascript">
 function fun() {
  var todo = document.getElementById('todo');
  todo.classList.toggle('hidden');
  var Hint = document.getElementById('hint');
  Hint.classList.toggle('hidden');
 }
</script>
<%- include("../partials/footer") %>
